<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC   
    "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.GoodsDao">
	
	<update id="reduceStock">
		update goods set stock=stock-#{num},saleNum=saleNum+#{num} where id=#{g.id}
	</update>
	<update id="restoreGoods">
		update goods set stock=stock+#{num},saleNum=saleNum-#{num} where id=#{g.id}
	</update>
	<select id="searchById" resultMap="GoodsAndPhoto">
		select g.*,p.id as pId,p.cover,p.path,p.g_id from photo as p left join goods as g on p.g_id=g.id where g.id=#{id}
	</select>
	<select id="searchAll" resultMap="GoodsAndPhoto">
		select g.*,p.id as pId,p.cover,p.path,p.g_id from photo as p left join goods as g on p.g_id=g.id 
	</select>
	<resultMap type="entity.Goods" id="GoodsAndPhoto">
		<id property="id" column="id"/>
		<result property="no" column="no"/>
		<result property="name" column="name"/>
		<result property="price" column="price"/>
		<result property="stock" column="stock"/>
		<result property="saleNum" column="saleNum"/>
		<result property="detail" column="detail"/>
		<result property="s_id" column="s_id"/>
		<collection property="photoList" ofType="entity.Photo">
			<id property="id" column="pId"/>
			<result property="cover" column="cover"/>
			<result property="path" column="path"/>
			<result property="g_id" column="g_id"/>
		</collection>
	</resultMap>
</mapper> 
    